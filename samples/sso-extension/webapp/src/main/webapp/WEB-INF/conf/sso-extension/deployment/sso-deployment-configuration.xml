<?xml version="1.0" encoding="UTF-8"?>
<configuration
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.exoplaform.org/xml/ns/kernel_1_0.xsd http://www.exoplaform.org/xml/ns/kernel_1_0.xsd"
  xmlns="http://www.exoplaform.org/xml/ns/kernel_1_0.xsd">

  

  <external-component-plugins>
    <target-component>org.exoplatform.services.deployment.WCMContentInitializerService</target-component>
    <component-plugin>
      <name>Content Initializer Service</name>
      <set-method>addPlugin</set-method>
      <type>org.exoplatform.services.deployment.plugins.XMLDeploymentPlugin</type>
      <description>XML Deployment Plugin</description>
      <init-params>
        <object-param>
          <name>ACME French translations directory</name>
          <description>Deployment Descriptor</description>
          <object type="org.exoplatform.services.deployment.DeploymentDescriptor">
            <field name="target">
              <object type="org.exoplatform.services.deployment.DeploymentDescriptor$Target">
                <field name="workspace">
                  <string>collaboration</string>
                </field>
                <field name="nodePath">
                  <string>/sites content/live/acme/web contents/site artifacts</string>
                </field>
              </object>
            </field>
            <field name="sourcePath">
              <string>war:/conf/sso-extension/wcm/artifacts/site-resources/acme/FrenchTranslations.xml</string>
            </field>
            <field name="cleanupPublication">
              <boolean>true</boolean>
            </field>
          </object>
        </object-param>
		 <object-param>
          <name>ACME French translations directory</name>
          <description>Deployment Descriptor</description>
          <object type="org.exoplatform.services.deployment.DeploymentDescriptor">
            <field name="target">
              <object type="org.exoplatform.services.deployment.DeploymentDescriptor$Target">
                <field name="workspace">
                  <string>collaboration</string>
                </field>
                <field name="nodePath">
                  <string>/sites content/live/acme/web contents/site artifacts</string>
                </field>
              </object>
            </field>
            <field name="sourcePath">
              <string>war:/conf/sso-extension/wcm/artifacts/site-resources/acme/Signin_en.xml</string>
            </field>
            <field name="cleanupPublication">
              <boolean>true</boolean>
            </field>
          </object>
        </object-param>
		
		 <object-param>
          <name>Office welcome Data</name>
          <description>Deployment Descriptor</description>
          <object type="org.exoplatform.services.deployment.DeploymentDescriptor">
            <field name="target">
              <object type="org.exoplatform.services.deployment.DeploymentDescriptor$Target">
                <field name="workspace">
                  <string>collaboration</string>
                </field>
                <field name="nodePath">
                  <string>/sites content/live/intranet/web contents/site artifacts</string>
                </field>
              </object>
            </field>
            <field name="sourcePath">
              <string>war:/conf/sso-extension/wcm/artifacts/site-resources/Welcome.xml</string>
            </field>
            <field name="cleanupPublication">
              <boolean>true</boolean>
            </field>
          </object>
        </object-param>
		</init-params>
    </component-plugin>
	
  </external-component-plugins>
  
  </configuration>